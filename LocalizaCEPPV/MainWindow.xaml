<Window x:Class="BuscaCepApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Busca CEP" Height="350" Width="525">
    <Grid>
        <TextBox Name="mskCEP" Height="30" Width="200" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />

        <Button Name="btnBuscar" Content="Buscar Endereço" Width="150" Height="50" Margin="220,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btnBuscar_Click">
            
        </Button>

        <TextBlock Text="Endereço:" FontWeight="Bold" Foreground="Green" Margin="10,60,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <TextBlock Name="lblLogradouro" Text="Logradouro" Background= "Bisque" Height="30" Width="400" Margin="10,79,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBlock Name="lblBairro" Text="Bairro" Background= "Bisque" Height="30" Width="400" Margin="10,114,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBlock Name="lblLocalidade" Text="Localidade" Background= "Bisque" Height="30" Width="400" Margin="10,149,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBlock Name="lblUf" Text="UF" Background= "Bisque" Height="30" Width="400" Margin="10,184,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
    </Grid>
</Window>
